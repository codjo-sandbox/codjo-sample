<?xml version="1.0" encoding="ISO-8859-1"?>
<!--
  Description des IHM de quarantaine par défaut.
-->
<quarantines>
    <!--
        QUARANTAINE DES ALBUMS
    -->
    <gui name="Album" tooltip="Quarantaine des albums">
        <quarantine>Q_AP_ALBUM</quarantine>
        <quser>Q_AP_USER_ALBUM</quser>
        <icon>sample.quarantine.album</icon>
        <window title="Quarantaine des albums">
            <preference>QUserAlbumWindow</preference>
            <dbFilter>errorType</dbFilter>
            <dbFilter>sourceFile</dbFilter>
            <dbFilter>creationDatetime</dbFilter>
        </window>
        <detail title="Album en quarantaine">
            <!-- AP_ALBUM FIELDS -->
            <field>title</field>
            <field>author</field>
            <field>publicationYear</field>
            <!-- Quarantine -->
            <field>errorLog</field>
            <field>errorType</field>
            <field>sourceSystem</field>
            <field>sourceFile</field>
            <field>creationDatetime</field>
        </detail>
    </gui>
</quarantines>
